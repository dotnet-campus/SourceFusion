<Project>

  <PropertyGroup Condition=" $(IsInDemoToolDebugMode) == 'True' ">
    <TransformCodeToolPath>$(MSBuildThisFileDirectory)..\..\bin\$(Configuration)\net47\codet.exe</TransformCodeToolPath>
  </PropertyGroup>

  <PropertyGroup Condition=" $(IsInDemoToolDebugMode) != 'True' ">
    <TransformCodeToolPath>$(MSBuildThisFileDirectory)..\tools\net47\codet.exe</TransformCodeToolPath>
  </PropertyGroup>

  <PropertyGroup>
    <CvteCompilerGeneratedCodeFolder>obj\$(Configuration)\$(TargetFramework)\Cvte.Compiler.GeneratedCodes</CvteCompilerGeneratedCodeFolder>
  </PropertyGroup>
    
  <Target Name="CvteCompilerGenerateCode" BeforeTargets="CoreCompile">
    <Exec ConsoleToMSBuild="True"
          Command="&quot;$(TransformCodeToolPath)&quot; -p &quot;$(MSBuildProjectDirectory)&quot; -i $(CvteCompilerGeneratedCodeFolder) -c &quot;@(Compile)&quot;">
      <Output TaskParameter="ConsoleOutput" PropertyName="OutputOfCvteCompilerGenerateCode" />
    </Exec>
  </Target>

  <Target Name="_IncludeCvteCompilerGeneratedCode" AfterTargets="CvteCompilerGenerateCode">
    <CreateItem Include="$(OutputOfCvteCompilerGenerateCode)">
      <Output TaskParameter="Include" ItemName="ExcludedCompileFile" />
    </CreateItem>
    <ItemGroup>
      <Compile Include="$(CvteCompilerGeneratedCodeFolder)\*.cs" />
      <Compile Remove="@(ExcludedCompileFile)" />
    </ItemGroup>
    <Message Text="编译时排除的文件：@(ExcludedCompileFile)" />
  </Target>

</Project>